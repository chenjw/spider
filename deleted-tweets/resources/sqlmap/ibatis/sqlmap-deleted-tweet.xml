<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="dt_deleted_tweet">

	<typeAlias alias="TA-DT-DELETED-TWEET" type="com.chenjw.spider.weibo.dataobject.TweetDO"/>

	<resultMap class="TA-DT-DELETED-TWEET" id="RM-DT-DELETED-TWEET">
		<result property="id" column="TID" jdbcType="VARCHAR" />
		<result property="userId" column="USER_ID" jdbcType="VARCHAR" />
		<result property="postDate" column="POST_DATE" jdbcType="DATE" javaType="date" />
		<result property="content" column="CONTENT" jdbcType="BLOB" />
	</resultMap>
	
	<select id="MS-SELECT-DELETED-TWEET-BY-TID" parameterClass="java.lang.String"
		resultMap="RM-DT-DELETED-TWEET">
		SELECT TID,USER_ID,POST_DATE,CONTENT
		FROM dt_deleted_tweet WHERE TID=#tid#
	</select>
	
	<select id="MS-SELECT-DELETED-TWEET-BY-USER-ID" parameterClass="java.lang.String"
		resultMap="RM-DT-DELETED-TWEET">
		SELECT TID,USER_ID,POST_DATE,CONTENT
		FROM dt_deleted_tweet WHERE USER_ID=#userId#
	</select>

    <insert id="MS-INSERT-DELETED-TWEET" parameterClass="TA-DT-DELETED-TWEET">
        INSERT INTO dt_deleted_tweet (
            TID,USER_ID,CONTENT,POST_DATE,GMT_CREATE
        ) VALUES (
            #id#,#userId#,#content#,#postDate#,now()
        )
    </insert>
</sqlMap>