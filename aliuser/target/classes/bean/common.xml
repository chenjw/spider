<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans default-autowire="byName">


	
	<bean id="httpClient" class="com.chenjw.client.impl.SimpleHttpClient" init-method="init" >
	</bean>

	<!-- 下面是动态组件部分的配置 -->
	<bean class="com.chenjw.dynacomponent.ComponentManager">
		<property name="containers">
			<map>
				<entry key="parse">
					<bean
						class="com.chenjw.spider.aliuser.container.ParserContainer" />
				</entry>
			</map>
		</property>
		<property name="builderMap">
			<map>
				<entry key="groovy">
					<bean
						class="com.chenjw.dynacomponent.builder.GroovyComponentBuilder" >
						<property name="encoding" value="UTF-8" />
					</bean>
				</entry>
			</map>
		</property>
		<!-- 监听sharedata目录 -->
		<property name="scanner">
			<bean
				class="com.chenjw.dynacomponent.scanner.EnvAwareScanner">
				<property name="folderPath"
					value="/home/admin/sharedata/mobile/aggrbillinfo/aggrbillinfo_v4" />
			</bean>
		</property>
	</bean>


	
</beans>
